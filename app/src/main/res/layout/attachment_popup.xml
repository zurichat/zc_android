<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dmAttachmentDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="70dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:clipToPadding="true"
        android:elevation="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Ellipse 317 -->
            <View
                android:id="@+id/ellipse_317"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="24dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="18dp"
                android:background="@drawable/ellipse_317">
            </View>

            <View
                android:id="@+id/ImageAttachmentVector"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="@id/ellipse_317"
                app:layout_constraintBottom_toBottomOf="@id/ellipse_317"
                app:layout_constraintLeft_toLeftOf="@id/ellipse_317"
                app:layout_constraintRight_toRightOf="@id/ellipse_317"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/wallpaper_icon"
                />


            <!-- Gallery -->
            <TextView
                android:id="@+id/galleryAttachmentIconTextView"
                android:layout_width="38dp"
                android:layout_height="14dp"
                android:layout_marginStart="25dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="19dp"
                android:text="@string/gallery"
                android:textAppearance="@style/gallery"
                android:gravity="top"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ellipse_317"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <!-- Audio -->
            <TextView
                android:id="@+id/audioAttachmentIconTextView"
                android:layout_width="32dp"
                android:layout_height="14dp"
                android:layout_marginStart="79dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="19dp"
                android:text="@string/audio"
                android:textAppearance="@style/audio"
                android:gravity="top"
                app:layout_constraintLeft_toRightOf="@id/galleryAttachmentIconTextView"
                app:layout_constraintTop_toBottomOf="@id/ellipse_319"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <!-- Document -->
            <TextView
                android:id="@+id/document"
                android:layout_width="56dp"
                android:layout_height="14dp"
                android:layout_marginLeft="70dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="19dp"
                android:text="@string/document"
                android:textAppearance="@style/document"
                android:gravity="top"
                app:layout_constraintTop_toBottomOf="@id/ellipse_320"
                app:layout_constraintLeft_toRightOf="@id/audioAttachmentIconTextView"
                app:layout_constraintBottom_toBottomOf="parent"
                />




            <!-- Ellipse 319 -->
            <View
                android:id="@+id/ellipse_319"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="74dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/ellipse_319"
                app:layout_constraintLeft_toRightOf="@id/ellipse_317"
                app:layout_constraintTop_toTopOf="@id/ellipse_317"
                app:layout_constraintBottom_toBottomOf="@id/ellipse_317"
                />

            <View
                android:id="@+id/audioAttachmentvector"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                app:layout_constraintTop_toTopOf="@id/ellipse_319"
                app:layout_constraintBottom_toBottomOf="@id/ellipse_319"
                app:layout_constraintLeft_toLeftOf="@id/ellipse_319"
                app:layout_constraintRight_toRightOf="@id/ellipse_319"
                android:background="@drawable/ic_baseline_headset_24"
                />

            <!-- Ellipse 320 -->
            <View
                android:id="@+id/ellipse_320"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="74dp"
                android:layout_marginEnd="24dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/ellipse_320"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ellipse_319"
                app:layout_constraintLeft_toRightOf="@id/ellipse_319"
                app:layout_constraintBottom_toBottomOf="@id/ellipse_319"
                />

            <View
                android:id="@+id/documentAttachmentVector"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/document_image"
                android:backgroundTint="@color/primaryColor"
                app:layout_constraintLeft_toLeftOf="@id/ellipse_320"
                app:layout_constraintRight_toRightOf="@id/ellipse_320"
                app:layout_constraintBottom_toBottomOf="@id/ellipse_320"
                app:layout_constraintTop_toTopOf="@id/ellipse_320"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>