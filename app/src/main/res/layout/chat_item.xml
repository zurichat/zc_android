<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="@dimen/mini_padding">

    <TextView
        android:id="@+id/chat_item_person_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/fadeBlack"
        android:textSize="@dimen/chat_item_person_text_size"
        android:fontFamily="@font/lato"
        app:layout_constraintBottom_toBottomOf="@+id/chat_item_person_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toEndOf="@+id/chat_item_person_icon"
        app:layout_constraintTop_toTopOf="@+id/chat_item_person_icon"
        app:layout_constraintVertical_bias="0.050000012" />

    <ImageButton
        android:id="@+id/chat_item_person_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_mary_icon"
        android:padding="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chat_item_message_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/lightGray"
        app:layout_constraintBottom_toBottomOf="@+id/chat_item_person_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toEndOf="@+id/chat_item_person_icon" />

    <TextView
        android:id="@+id/chat_item_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chat_item_dummy_time"
        android:textColor="@color/canvas_color"
        app:layout_constraintBottom_toTopOf="@+id/chat_item_message_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toEndOf="@+id/chat_item_person_name_txt"
        app:layout_constraintTop_toTopOf="@+id/chat_item_person_name_txt"
        app:layout_constraintVertical_bias="0.24000001" />

    <TextView
        android:id="@+id/chat_item_message_count_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/ic_circle_shape"
        android:paddingStart="@dimen/default_padding"
        android:paddingEnd="@dimen/default_padding"
        android:paddingTop="@dimen/default_padding"
        android:paddingBottom="@dimen/default_padding"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/chat_item_time_txt"
        app:layout_constraintStart_toStartOf="@+id/chat_item_time_txt"
        app:layout_constraintTop_toBottomOf="@+id/chat_item_time_txt" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="@dimen/status_dimension"
        android:layout_height="@dimen/status_dimension"
        android:background="@drawable/ic_status"
        app:layout_constraintBottom_toBottomOf="@+id/chat_item_person_icon"
        app:layout_constraintEnd_toEndOf="@+id/chat_item_person_icon"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/chat_item_person_icon"
        app:layout_constraintTop_toTopOf="@+id/chat_item_person_icon"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>